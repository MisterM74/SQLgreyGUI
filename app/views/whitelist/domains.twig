{% extends "layouts.base" %}

{% block title %}
    {{ parent() }}Auto-Whitelist > Domains
{% endblock %}

{% block content %}
    <h3 class="page-header"><i class="fa fa-thumbs-o-up fa-fw"></i> Auto-Whitelist > <i class="fa fa-globe fa-fw"></i> Domains</h3>

    {{ html_alert('info', 'List of auto-whitelisted domains') }}

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed" id="whitelisted-domains-table">
            <thead>
                <tr>
                    <th>Sender domain</th>
                    <th>IP address</th>
                    <th>First seen</th>
                    <th>Last seen</th>
                </tr>
            </thead>
            <tbody>
                {% for domain in whitelist_domains %}
                    <tr>
                        <td>{{ domain.getSenderDomain() }}</td>
                        <td>{{ domain.getSource() }}</td>
                        <td>{{ domain.getFirstSeen() }}</td>
                        <td>{{ domain.getLastSeen() }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascript %}
    <script>
        $(document).ready(function() {
            $('#whitelisted-domains-table').dataTable({
            });
        });
    </script>
{% endblock %}