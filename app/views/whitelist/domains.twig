{% extends "layouts.base" %}

{% block title %}
    {{ parent() }}Auto-Whitelist > Domains
{% endblock %}

{% macro buttons() %}
    <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa fa-trash-o"></i> delete selected</button>
{% endmacro %}

{% block content %}
    <h3 class="page-header"><i class="fa fa-thumbs-o-up fa-fw"></i> Auto-Whitelist > <i class="fa fa-globe fa-fw"></i> Domains</h3>

    {{ html_alert('info', 'List of auto-whitelisted domains') }}

    {{ form_open({ action: 'WhitelistController@deleteDomains'}) }}

    {{ _self.buttons() }}

    <br /><br />

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed" id="whitelist-domains-table">
            <thead>
                <tr>
                    <th>{{ form_checkbox('select_all', '', false, { id: 'whitelist-domains-select_all' }) }}</th>
                    <th>Sender domain</th>
                    <th>IP address</th>
                    <th>First seen</th>
                    <th>Last seen</th>
                </tr>
            </thead>
            <tbody>
                {% for domain in whitelist_domains %}
                    <tr>
                        <td>{{ form_checkbox('whitelist_domains[]', html_cval(domain)) }}</td>
                        <td>{{ domain.getSenderDomain() }}</td>
                        <td>{{ domain.getSource() }}</td>
                        <td>{{ domain.getFirstSeen() }}</td>
                        <td>{{ domain.getLastSeen() }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {{ _self.buttons() }}

    {{ form_close() }}
{% endblock %}

{% block javascript %}
    <script>
        $(document).ready(function() {
            $('#whitelist-domains-table').dataTable({
                order: [1, 'asc'],
                aoColumnDefs: [
                    {bSortable: false, aTargets: [0]}
                ],
            });

            addCheckboxTrigger('#whitelist-domains-table tbody tr');
            addSelectAllTrigger('#whitelist-domains-select_all', '#whitelist-domains-table tbody tr td');
        });
    </script>
{% endblock %}