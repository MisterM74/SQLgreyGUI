{% extends "layouts.base" %}

{% block title %}
    {{ parent() }}Auto-Whitelist > eMails
{% endblock %}

{% block content %}
    <h3 class="page-header"><i class="fa fa-thumbs-o-up fa-fw"></i> Auto-Whitelist > <i class="fa fa-envelope-o fa-fw"></i> eMails</h3>

    {{ html_alert('info', 'List of auto-whitelisted eMails') }}
    
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed" id="whitelisted-emails-table">
            <thead>
                <tr>
                    <th>Sender name</th>
                    <th>Sender domain</th>
                    <th>IP address</th>
                    <th>First seen</th>
                    <th>Last seen</th>
                </tr>
            </thead>
            <tbody>
                {% for email in whitelist_emails %}
                    <tr>
                        <td>{{ email.getSenderName() }}</td>
                        <td>{{ email.getSenderDomain() }}</td>
                        <td>{{ email.getSource() }}</td>
                        <td>{{ email.getFirstSeen() }}</td>
                        <td>{{ email.getLastSeen() }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascript %}
    <script>
        $(document).ready(function() {
            $('#whitelisted-emails-table').dataTable({
            });
        });
    </script>
{% endblock %}