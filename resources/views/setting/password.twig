{% extends "layouts.base" %}

{% block title %}
    {{ parent() }}Settings
{% endblock %}

{% block content %}
    <h3 class="page-header"><i class="fa fa-gear fa-fw"></i> Settings > <i class="fa fa-lock fa-fw"></i> Password</h3>

    <div class="row">
        <div class="col-md-4">
            {{ Form.open({ action: 'SettingController@password', role: 'form' }) }}
            <fieldset>
                <div class="form-group {%if errors.has('password') %}has-error{% endif %}">
                    {%if errors.has('password') %}
                        <p class="text-danger">{{ errors.first('password') }}</p>
                    {% endif %}
                    {{ Form.password('password', { class: 'form-control', placeholder: 'Current password'} ) }}
                </div>

                <div class="form-group {%if errors.has('password_new') %}has-error{% endif %}">
                    {%if errors.has('password_new') %}
                        <p class="text-danger">{{ errors.first('password_new') }}</p>
                    {% endif %}
                    {{ Form.password('password_new', { class: 'form-control', placeholder: 'New password'} ) }}
                </div>
                <div class="form-group {%if errors.has('password_new_repeat') %}has-error{% endif %}">
                    {%if errors.has('password_new_repeat') %}
                        <p class="text-danger">{{ errors.first('password_new_repeat') }}</p>
                    {% endif %}
                    {{ Form.password('password_new_repeat', { class: 'form-control', placeholder: 'Repeat new password'} ) }}
                </div>
                {{ Form.submit('Change password', { class: 'btn btn-success btn-block' }) }}

            </fieldset>
            {{ Form.close() }}
        </div>
    </div>
{% endblock %}